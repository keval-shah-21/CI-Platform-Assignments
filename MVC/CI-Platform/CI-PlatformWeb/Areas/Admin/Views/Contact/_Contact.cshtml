@model List<ContactVM>
<div class="border-bottom mb-4">
    <h4 class="border-bottom border-dark width-max-conatent m-0 pb-3 pe-2">Contact</h4>
</div>
<div class="d-flex align-items-center adminSearchContainer mb-4 gap-1">
    <div class="d-flex align-items-center border border-2 rounded py-1 ps-2 gap-1 flex-grow-1">
        <img src="/images/static/search.png" alt="search">
        <input type="search" id="adminSearch" placeholder="Search" class="form-control border-0">
    </div>
    <div class="spinner-border text-secondary opacity-0" role="status">
        <span class="visually-hidden">Loading...</span>
    </div>
</div>
<div class="table-responsive border">
    <table class="table table-hover">
        <thead>
            <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Subject</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @if (Model?.LongCount() == 0)
            {
                <tr>
                    <td colspan="100%">
                        <div class="text-center py-3">No data found.</div>
                    </td>
                </tr>
            }
            @foreach (ContactVM contact in Model)
            {
                <tr>
                    <td>
                        @contact.User.FirstName @contact.User.LastName
                    </td>
                    <td>
                        @contact.User.Email
                    </td>
                    <td>
                        @contact.Subject
                    </td>
                    @if (contact.Status == true)
                    {
                        <td><button type="button" data-view="@contact.ContactId" class="btn button text-14 px-3 py-1">View</button></td>
                    }
                    else
                    {
                        <td>
                            <img src="/images/static/reply-fill.svg"
                         class="cursor-pointer d-inline width-max-conatent me-2" alt="edit"
                         height="20px" width="20px" data-reply="@contact.ContactId">
                            <img src="/images/static/bin.png" class="cursor-pointer d-inline width-max-conatent"
                         alt="bin" height="20px" width="20px" data-delete="@contact.ContactId">
                        </td>
                    }
                </tr>
            }
        </tbody>
    </table>
</div>
<div class="pagination d-flex justify-content-end gap-1 px-3 my-4"></div>