@model MissionApplicationVM
<div class="modal fade" id="viewApplicationModal" tabindex="-1"
     aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="exampleModalLabel">Contact Us</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form class="d-grid gap-3">

                    <div class="row row-cols-1 row-cols-md-2">
                        <div class="col">
                            <label class="form-label">Name</label>
                            <input type="text" value="@Model.UserName" class="form-control" readonly>
                        </div>
                        <div class="col">
                            <label class="form-label" asp-for="@Model.User.PhoneNumber"></label>
                            <input type="text" asp-for="@Model.User.PhoneNumber" readonly placeholder="Enter your phone number" class="form-control">
                        </div>
                    </div>

                    <div class="row row-cols-1 row-cols-md-2">
                        <div class="col">
                            <label class="form-label" asp-for="@Model.User.EmployeeId"></label>
                            <input type="text" readonly asp-for="@Model.User.EmployeeId" placeholder="Enter your employee id" class="form-control">
                        </div>
                        <div class="col">
                            <label class="form-label" asp-for="@Model.User.Department"></label>
                            <input type="text" readonly asp-for="@Model.User.Department" placeholder="Enter your department" class="form-control">
                        </div>
                    </div>
                    <div>
                        <label class="form-label" asp-for="@Model.User.ProfileText"></label>
                        <textarea rows="4" type="text" asp-for="@Model.User.ProfileText" readonly placeholder="Enter your profile description..."
                                  class="form-control"></textarea>
                    </div>
                    <div>
                        <label class="form-label" asp-for="@Model.User.WhyIVolunteer"></label>
                        <textarea rows="4" type="text" asp-for="@Model.User.WhyIVolunteer" readonly placeholder="Enter your comments..." class="form-control"></textarea>
                    </div>
                    <div class="row row-cols-1 row-cols-md-2">
                        <div class="col">
                            <label class="form-label">City</label>
                            <select class="form-select">
                                <option value="0" disabled selected>@Model.User.</option>
                               
                            </select>
                        </div>
                        <div class="col">
                            <label class="form-label">Country</label>
                            <select class="form-select">
                                <option value="0" disabled selected>Select your country</option>
                            </select>
                        </div>
                    </div>
                    <div class="border-bottom border-2 mb-1">
                        <h4 class="border-bottom border-dark width-max-conatent m-0 pb-3 pe-2">Professional Information</h4>
                    </div>
                    <div class="row row-cols-1 row-cols-md-2">
                        <div class="col">
                            <label class="form-label">Select Your Availability</label>
                            <select class="form-select" asp-for=Availability>
                                <option value="-1" disabled selected>Select your availability</option>
                                <option value="0">Daily</option>
                                <option value="1">Weekly</option>
                                <option value="2">Week-end Only</option>
                                <option value="3">Monthly</option>
                            </select>
                            <span class="text-danger text-14" asp-validation-for="Availability"></span>
                        </div>
                        <div class="col">
                            <label class="form-label" asp-for="LinkedInUrl"></label>
                            <input type="text" asp-for="LinkedInUrl" placeholder="Enter LinkedIn account url" class="form-control">
                            <span class="text-danger text-14" asp-validation-for="LinkedInUrl"></span>
                        </div>
                    </div>
                    <div class="border-bottom border-2 mb-1">
                        <h4 class="border-bottom border-dark width-max-conatent m-0 pb-3 pe-2">My Skills</h4>
                    </div>
                    @foreach (UserSkillVM userSkill in Model.UserSkillVMs)
                    {
                        <input hidden name="preloadedSkills" value="@userSkill.SkillId">
                    }
                    <div class="fw-light border p-2 d-grid gap-1">
                        <div id="noSkill">No skills are selected.</div>
                        <div id="outerSkillsContainer">
                            @foreach (UserSkillVM userSkill in Model.UserSkillVMs)
                            {
                                <div data-pre="@userSkill.SkillId">
                                    @userSkill.Skill.SkillName
                                </div>
                            }
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn button-dark px-4" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>