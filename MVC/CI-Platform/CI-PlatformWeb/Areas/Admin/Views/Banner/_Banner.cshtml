@model List<BannerVM>
<div class="border-bottom mb-3">
    <h4 class="border-bottom border-dark width-max-conatent m-0 pb-3 pe-2">Banner Management</h4>
</div>
<button class="btn button d-flex align-items-center gap-2 mb-3 ms-auto" id="addBtn">
    <img src="/images/static/plus.png" alt="plus">
    Add
</button>
<div class="table-responsive border">
    <table class="table table-hover">
        <thead>
            <tr>
                <th>Image</th>
                <th>Title</th>
                <th>Sort Order</th>
                <th>Last Modified</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @if (Model?.LongCount() == 0)
            {
                <tr>
                    <td colspan="100%">
                        <div class="text-center py-3">No banners found.</div>
                    </td>
                </tr>
            }
            @foreach (BannerVM banner in Model)
            {
                <tr>
                    <td>
                        <img src="@banner.MediaPath@banner.MediaName@banner.MediaType"
                         height="150" width="150" class="object-fit-cover">
                    </td>
                    <td>
                        @banner.Title
                    </td>
                    <td>
                        @banner.SortOrder
                    </td>
                    @if (banner.UpdatedAt != null)
                    {
                        <td>@banner.UpdatedAt?.ToString("d")</td>
                    }
                    else
                    {
                        <td>@banner.CreatedAt.ToString("d")</td>
                    }
                    <td>
                        <img src="/images/static/editing.png"
                         class="cursor-pointer d-inline width-max-conatent me-2" alt="edit"
                         height="20px" width="20px" data-edit="@banner.BannerId">
                        <img src="/images/static/bin.png" class="cursor-pointer d-inline width-max-conatent"
                         alt="bin" height="20px" width="20px" data-delete="@banner.BannerId">
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<div class="d-flex justify-content-between gap-1 px-3 my-4 flex-wrap align-items-center">
    <div class="pagination-range"></div>
    <div class="pagination d-flex justify-content-between gap-1 flex-shrink-0"></div>
</div>