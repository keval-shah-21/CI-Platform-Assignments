@model ContactVM
@{
    var firstName = Context.Session.GetString("FirstName");
    var lastName = Context.Session.GetString("LastName");
    var email = Context.Session.GetString("Email");
    var userId = Context.Session.GetString("UserId");
}
<div class="modal fade" id="contactModal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1"
     aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="exampleModalLabel">Contact Us</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form id="contactForm">
                <input hidden id="sessionUserId" value="@userId" asp-for="UserId" />
                <div class="modal-body d-grid gap-2 color-darkgray">
                    <div>
                        <label for="fullName">Name*</label>
                        <input type="text" class="form-control" value="@firstName @lastName" id="fullName" readonly />
                    </div>
                    <div>
                        <label for="email">Email Address*</label>
                        <input type="text" class="form-control" value="@email" id="email" readonly />
                    </div>
                    <div>
                        <label for="subject">Subject*</label>
                        <input type="text" class="form-control" asp-for="Subject" placeholder="Enter your subject" />
                        <span class="text-danger text-14" asp-validation-for="Subject"></span>
                    </div>
                    <div>
                        <label for="message">Message*</label>
                        <textarea type="text" class="form-control" asp-for="Message" rows="4"
                                  placeholder="Enter your message"></textarea>
                        <span class="text-danger text-14" asp-validation-for="Message"></span>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn button-dark px-4" data-bs-dismiss="modal">Close</button>
                    <button type="submit" class="btn button px-4">Save</button>
                </div>
            </form>
        </div>
    </div>
</div>
<partial name="_ValidationScriptsPartial"></partial>