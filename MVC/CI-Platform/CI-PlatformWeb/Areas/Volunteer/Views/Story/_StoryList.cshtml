@model List<StoryVM>
<section class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
    <div class="col">
        <div class="card shadow-sm h-100 sl-card">
            <div class="card-top position-relative">
                <img src="/images/static/Grow-Trees-On-the-path-to-environment-sustainability-3.png"
                     class="card-img-top h-100"
                     alt="mission image" />
                <div class="bg-white rounded-pill mx-auto translate-middle-y px-2 py-1 width-max-conatent fw-light mb-n2">
                    Environment
                </div>
                <div class="sl-story-overlay position-absolute d-none justify-content-center align-items-center">
                    <a href="#"
                       class="btn border rounded-pill d-flex align-items-center gap-2 border-white text-white">
                        View details
                        <img src="/images/static/right-arrow-white.svg" alt="right arrow" />
                    </a>
                </div>
            </div>
            <div class="card-body color-darkgray py-4">
                <h4 class="">
                    Grow Trees On the path to environment sustainability
                </h4>
                <p class=" fw-light ellipsis-2 text-black-50 text-15">
                    Some quick example text to build on the card title and make up
                    the bulk of the card's content. Lorem ipsum dolor sit amet
                    consectetur adipisicing elit. Cum id consequuntur tempora vel,
                    unde consectetur adipisci dolore. Deserunt, veritatis tempora.
                </p>
                <div class="d-flex gap-2 align-items-center">
                    <img src="/images/static/volunteer1.png"
                         alt="user image"
                         class="rounded-circle"
                         height="50px"
                         width="50px" />
                    <span>Andrew Johnson</span>
                </div>
                <a href="#"
                   class="sl-view-btn btn border rounded-pill d-flex align-items-center gap-2 mt-3 p-2 width-max-conatent mx-auto border-dark">
                    View details
                    <img src="/images/static/right-arrow-dark.svg" alt="right arrow" />
                </a>
            </div>
        </div>
    </div>
</section>