@model LoginVM;
@{
    ViewData["Title"] = "Login";
}
<main class="d-flex flex-column flex-lg-row">
    <partial name="_HeroSectionCarousel"></partial>
    <section class="right-section d-flex flex-column gap-3 justify-content-center align-items-center p-5 p-lg-0">
        <span class="text-danger text-14"></span>
        <form method="post" asp-route="LoginPost" class="login-form d-grid gap-4">
            <div>
                <label asp-for="Email" class="fw-light"></label>
                <input type="email" asp-for="Email" class="form-control" placeholder="Enter your email address">
                <span asp-validation-for="Email" class="text-14 text-danger"></span>
            </div>
            <div>
                <label asp-for="Password" class="fw-light"></label>
                <input type="password" asp-for="Password" class="form-control">
                <span asp-validation-for="Password" class="text-14 text-danger"></span>
                <span class="text-success text-14">@TempData["Success"]</span>
                <span class="text-danger text-14">@TempData["Error"]</span>
            </div>
            <button type="submit" class="btn button w-100 bg-white">Login</button>
        </form>
        <a asp-controller="User" asp-action="ForgotPassword" class="fw-light color-darkgray text-14">Lost your
            password?</a>
        <div class="fw-light text-14 color-darkgray">Don't have an account? <a asp-controller="User"
                asp-action="Registration" class="color-blue">Create new account</a></div>
        <a href="#" class="fw-light color-darkgray privacy-policy text-14">Privacy Policy</a>
    </section>
</main>

@section Scripts{
    <partial name="_ValidationScriptsPartial.cshtml"></partial>
}