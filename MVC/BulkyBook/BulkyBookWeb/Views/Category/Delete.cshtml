@model Category
@{
    ViewData["Title"] = "Delete";
}
<form method="POST" asp-action="DeletePost">
    <div class="border p-3">
        <div class="row">
            <h2 class="text-primary">Delete Category</h2>
            <hr />
        </div>
        <input hidden asp-for="Id">
        <div class="mb-3">
            <label asp-for="Name"></label>
            <input type="text" asp-for="Name" class="form-control" disabled>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="DisplayOrder"></label>
            <input type="text" asp-for="DisplayOrder" class="form-control" disabled>
            <span asp-validation-for="DisplayOrder" class="text-danger"></span>
        </div>
        <button class="btn btn-primary">Delete</button>
        <a asp-controller="Category" asp-action="Index" class="btn btn-secondary">Back to Category</a>
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}